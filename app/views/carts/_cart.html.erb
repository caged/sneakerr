<%= turbo_frame_tag @cart do %>
  <details class="relative">
    <summary class="cursor-pointer font-bold">
      <%= number_to_currency @cart.total_price %>
    </summary>
    <div class="w-96 p-2 absolute right-0 bg-white shadow-lg rounded-b-lg ">
      <div class="divide-y divide-gray-50">
        <%= render @cart.line_items %>
      </div>
      <div class="font-black flex justify-between border-t-2 border-gray-500 p-2">
        <span>Subtotal:</span>
        <span>
          <%= number_to_currency @cart.total_price %>
        </span>
      </div>
    </div>
  </details>
<% end %>
