<% if @review.persisted? %>
  <%= turbo_stream.replace(dom_id(@sneaker, :new_review), partial: 'form', locals: {review: Review.new}) %>
  <%= turbo_stream.append(dom_id(@sneaker, :reviews), partial: 'review', locals: {review: @review }) %>
<% else %>
  <%= turbo_stream.replace(dom_id(@sneaker, :new_review), partial: 'form', locals: {review: @review}) %>
<% end %>
